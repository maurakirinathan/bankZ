    <a  class="navBar" href="/allpromizes" style="padding-left:10%;"  onclick="check2()"><i class="fa fa-money"></i>   All Promizes</a>
    <a  class="navBar" href="/alltransaction" style="padding-left:10%;"><i class="fa fa-window-restore"></i>  All Transaction</a>
