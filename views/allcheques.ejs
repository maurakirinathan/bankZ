<div class="page-data"  id="datatable">
    <div class="data-table">

        <div style="float: right;">
            <form method="post" action="/allCheque_search">
                <input type="text" placeholder="Search by Cheque ID.." name="id" >
                <button type="submit" class="a-inside edit">Search</button>
            </form>
        </div>
        <table  cellpadding="7" cellspacing="7">
         <!--   <lable ><b> Cheque List</b></lable>-->
            <tr>
                <th>Cheque ID</th>
                <th>Bank ID</th>
                <th>Date</th>
                <th>Cheque Amount</th>


            </tr>

            <% if(data.length){

            for(var i = 0;i < data.length;i++) { %>

            <tr class='clickable-row' data-href='/chequeview/<%= data[i].id %>'>
                <td><%=data[i].id%></td>
                <td><%=data[i].bank_id%></td>
                <td><%=data[i].date%></td>
                <td><%=data[i].amount%></td>

               <!-- <td>
                    <a class="a-inside edit" href="/chequeview/<%=data[i].id%>">View</a>
               </td>-->
            </tr>
            <% }

            }else{ %>
            <tr>
                <td colspan="6">No data available</td>
            </tr>
            <% } %>

        </table>
        <div align="right" style="padding-top: 2%;">
            <% if(data.length){%>
        <a class="a-inside edit" href="/allcheques_previous/<%=data[0].id%>">Previous</a><a class="a-inside edit" href='/allcheques_next/<%=data[data.length-1].id%>'>Next</a>
       <%}%>
        </div>
    </div>
</div>


